    @model  List<CoinOutputModel>

<div class="wrapper">
    <header class="header">
        <div class="header__container">
        </div>
    </header>
    <main class="page">
        <span id="aSortButton" class="row-crypto-table__link">aSort</span>
        <section class="page__crypto-table crypto-table">
                    <div class="crypto-table__container">

                         @foreach(var coin in @Model)
                         {
                            decimal coinPrice =coin.Price;
                              string imageSource = $"~/Images/{@coin.Name}.png";
                                     @using (Html.BeginForm("Details", "Market", new { coinName = coin.Name }, FormMethod.Post))
                                    {
                                        <div class="crypto-table__row row-crypto-table">

                                                    <div class="row-crypto-table__left-elem left-elem-row-crypto-table">
                                                        <div class="left-elem-row-crypto-table__icon">
                                                               <img src="@Url.Content(imageSource)" >
                                                        </div>
                                                         <div class="left-elem-row-crypto-table__title">
                                                                    @coin.Name
                                                         </div>
                                                    </div> 

                                                     <div class="row-crypto-table__price">
                                                            $@coinPrice
                                                     </div>

                                                     <div id="divChangesColor" class="row-crypto-table__percent row-crypto-table 
                                                        row-crypto-table_right changes24"><span class="changes24">@coin.Changes24h</span>%
                                                     </div>

                                                        <div class="row-crypto-table__amount row-crypto-table_right">
                                                          @coin.DayOpenPrice
                                                        </div>

                                                        <div class="row-crypto-table__links">
                                                            <a asp-action="Sort" asp-controller="Market" id="SortButton" class="row-crypto-table__link">Sort</a>
                                                            <a asp-action="Index" asp-controller="Futures" asp-route-coinName="@coin.Name" id="SortButton" class="row-crypto-table__link">Futures</a>
                                                            <button class="row-crypto-table__link">Buy</button>
                                                        </div>
                                        </div>
                                    }	
                         }
                    </div>
            </div>
        </section>
    </main>
    <footer class="footer">
        <div class="footer__container">
        </div>
    </footer>
</div>

