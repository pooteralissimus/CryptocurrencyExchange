
    @model  List<CoinOutputModel>

@{
 

  }
<div class="wrapper">
    <header class="header">
        <div class="header__container">
        </div>
    </header>
    <main class="page">
        <section class="page__crypto-table crypto-table">
            <div class="crypto-table__container">

                 @foreach(var coin in @Model){
    decimal coinPrice = Convert.ToDecimal(coin.Price);
                <div class="crypto-table__row row-crypto-table">
                    <div class="row-crypto-table__left-elem left-elem-row-crypto-table">
                        <div class="left-elem-row-crypto-table__icon">
                            <picture><source srcset="img/icons/crypto/bitcoin.webp" type="image/webp"><img src="img/icons/crypto/bitcoin.png" alt=""></picture>
                        </div>
                        <div class="left-elem-row-crypto-table__title">
                            @coin.Name
                        </div>
                    </div>
                    <div class="row-crypto-table__price">
                        $@coinPrice
                    </div>

                    <div class="row-crypto-table__percent row-crypto-table__percent_red row-crypto-table_right">
                      @Math.Round(@coin.changes24h, 2)%
                    </div>
                    <div class="row-crypto-table__amount row-crypto-table_right">
                      @coin.DayOpenPrice
                    </div>
                    <div class="row-crypto-table__links">
                        <a href="" class="row-crypto-table__link">Detail</a>
                        <a href="" class="row-crypto-table__link">Trade</a>
                    </div>
                </div>
                }
                
                </div>
            </div>
        </section>
    </main>
    <footer class="footer">
        <div class="footer__container">
        </div>
    </footer>
</div>

